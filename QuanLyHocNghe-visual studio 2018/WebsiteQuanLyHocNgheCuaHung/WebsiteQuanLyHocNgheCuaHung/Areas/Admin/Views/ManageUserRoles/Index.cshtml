@using WebsiteQuanLyHocNgheCuaHung.Models;

@model IEnumerable<ApplicationUser>

@{

    ViewBag.Title = "Quản lý thành viên";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">

    <div class="col-sm-12">
        <h2>@ViewBag.Title</h2>
        <hr />
        @Html.ActionLink("Trở Về", "Index", "Admin", null, new { @class = "w3-button w3-deep-purple" })
        <table class="container">
            <thead>
                <tr>
                    <th>Username</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)

            {

                <tr>
                    <td>@item.UserName</td>
                    <td>
                        @Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |

                        @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)
                    </td>
                </tr>

        }
            </tbody>
        </table>
    </div>

</div>
